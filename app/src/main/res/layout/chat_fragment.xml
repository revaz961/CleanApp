<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/main_margin_medium"
        android:layout_marginBottom="@dimen/main_margin_medium"
        android:layout_marginStart="@dimen/main_margin_small"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="@dimen/main_padding_small"
        android:paddingEnd="@dimen/main_padding_small"
        android:paddingBottom="@dimen/auth_padding_small"
        />

</LinearLayout>